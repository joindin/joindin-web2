{% block forms %}
    {% if user %}
        {{ form_start(form, {'attr' : {'id' : 'event'} }) }}
        {{ form_errors(form) }}
      <div class="row">
            <fieldset class="col-sm-6">
                <legend>Talk information</legend>
                {{ form_row(form.title) }}
                {{ form_row(form.description) }}
                {{ form_row(form.language) }}
                {{ form_row(form.slides_link) }}
            </fieldset>

            <fieldset class="col-offset-sm-6 col-sm-6">
                <legend>
                    Administative Information
                </legend>
                <div class="row">
                    {{ form_row(form.start_date) }}
                    {{ form_row(form.duration) }}
                    {{ form_row(form.type) }}
                    {#{ form_row(form.speakers) }#}
                </div>
            </fieldset>

        </div>
        <div class="row">
            <div class="col-sm-12">
                <input type="submit" class="btn btn-primary pull-right" value="Submit" />
            </div>
        </div>
        {{ form_end(form) }}
    {% else %}
        <h1>Login required</h1>
        <p>In order to submit an event, please log in.</p>
    {% endif %}
{% endblock %}

{% block extraAside %}
{% endblock %}

{% block extra_styles %}
{% endblock %}

{% block extra_javascript %}
    <script type="text/javascript">
        $('#talk_start_date').datetimepicker();
    </script>
{% endblock %}
