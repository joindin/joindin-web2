<div class="media">
    <section>
        <div class="logo">
            <a href="{{ urlFor('event-detail', {"friendly_name": event.getUrlFriendlyName}) }}">

                <img src="{{ event.getIcon|img_path("event_icons") }}" alt=" " />
            </a>
        </div>
    </section>

    <section>
        <h3 class="header">
            <a href="{{ urlFor('event-detail', {"friendly_name": event.getUrlFriendlyName}) }}">{{ event.getName }}</a>
        </h3>

        <p class="meta">

        </p>

        <p class="wideOnly">{{ event.getDescription | slice(0, 200)}}&hellip;</p>

        <p class="meta">
            {{ event.getStartDate|date('M d Y') }}
            {%  if event.getStartDate|date('M d Y')
                    is not sameas(event.getEndDate|date('M d Y')) %}
                &ndash; {{ event.getEndDate|date('M d Y') }}

            {% endif %}

            {% if event.getLocation %}
                @ {{event.getLocation|escape}}
            {% endif %}

            |

            <a href="{{ urlFor('event-detail', {"friendly_name": event.getUrlFriendlyName}) }}#comments">
                {{ event.getCommentsCount}} comments</a> |
            {{ event.getAttendeeString|escape }}
            <!--| <a href="" class="button">I'm attending</a>-->
        </p>
    </section>

</div>
