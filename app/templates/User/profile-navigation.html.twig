<section class="page-header">
    <div class="row user-profile">
        <div class="col-xs-12">
            <div class="pull-left">
                <img src="{{ gravatar(thisUser.getGravatarHash, 100) }}">
            </div>
            <div>
                <h2>{{ thisUser.getFullname }}</h2>
                <section class="user-details">
                    {% if thisUser.getTwitterUsername %}
                        <p>
                            Twitter:
                            <a href="https://twitter.com/{{ thisUser.getTwitterUsername }}">
                                @{{ thisUser.getTwitterUsername }}
                            </a>
                        </p>
                    {% endif %}

                    {% if thisUser.getBiography %}
                        <p>Bio: {{ thisUser.getBiography }}</p>
                    {% endif %}

                    {% if thisUser.canEdit %}
                        <p class="more">
                            <a href="{{ urlFor('user-profile-edit', {'username': thisUser.getUsername}) }}">
                                Edit
                            </a>
                            &mdash;
                            <a href="{{ urlFor('clients', {'username': thisUser.getUsername}) }}">
                                Clients
                            </a>
                            &mdash;
                            <a href="{{ urlFor('apikey-show', {'username': thisUser.getUsername}) }}">
                                API-Keys
                            </a>
                            &mdash;
                            <a href="{{ urlFor('user-profile-events', {'username': thisUser.getUsername}) }}">
                                Attended Events
                            </a>
                            -
                            <a href="{{ urlFor('user-profile-hosted', {'username': thisUser.getUsername}) }}">
                                Hosted Events
                            </a>
                        </p>
                    {% endif %}
                </section>
            </div>
        </div>
    </div>
</section>