{% block form %}
    {% if user %}
        {{ form_start(form, {'attr' : {'id' : 'client'} }) }}
        {{ form_errors(form) }}
        <div class="row">
            <div class="col-sm-12 bg_warning">
                <p>
                    You are about to permanently remove your application
                    {{ client.getName }}.</p>
                <p>
                    This can not be undone!</p>
                <p>
                    Are you sure you want to do delete the application?
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                {{ form_row(form.client_id) }}
                <input type="submit" class="btn btn-danger pull-right" value="Permanently delete the client" />
                <a href="{{ backUri }}" class="btn btn-default pull-right">Cancel</a>
            </div>
        </div>
        {{ form_end(form) }}
    {% else %}
        <h1>Login required</h1>
        <p>In order to submit a client, please log in.</p>
    {% endif %}
{% endblock %}
