{% if event.isAttending == false and user %}
    <a href="{{ urlFor('event-attend', {"friendly_name": event.getUrlFriendlyName}) }}" data-friendly-name="{{ event.getUrlFriendlyName|escape }}" class="attending btn btn-xs btn-primary">
        {% if event.isPastEvent %}
            I went to this event
        {% else %}
            I will be attending
        {% endif %}
    </a>
{% endif %}
